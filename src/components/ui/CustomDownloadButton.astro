---
import { Download } from "@lucide/astro";

const { file, class: className, ...props } = Astro.props;
---

<a
  href={file}
  download
  class={`btn-hover-fill group flex items-center gap-2 px-8 py-2 rounded-full border border-theme-black cursor-pointer shadow transition-shadow duration-300 hover:shadow-[0_0_15px_rgba(176,255,111,0.6)] ${className}`}
  {...props}
>
  <Download class="download-icon" />
  <span
    class="font-semibold text-theme-black group-hover:text-theme-black transition-colors duration-300"
  >
    <slot />
  </span>
</a>

<style>
  .btn-hover-fill {
    position: relative;
    overflow: hidden;
  }

  .btn-hover-fill::before {
    content: "";
    position: absolute;
    inset: 0;
    background-color: var(--color-theme-green);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s ease-in-out;
    z-index: 0;
  }

  .btn-hover-fill:hover::before {
    transform: scaleX(1);
  }

  .btn-hover-fill > * {
    position: relative;
    z-index: 10;
  }

  @keyframes bounceUpDown {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-3px);
    }
  }

  .btn-hover-fill:hover .download-icon {
    animation: bounceUpDown 1.6s ease-in-out infinite;
  }
</style>
