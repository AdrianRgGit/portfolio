---
import { ChevronRight, ChevronLeft } from "@lucide/astro";

const { direction = "right", onClick = null } = Astro.props;

const Icon = direction === "left" ? ChevronLeft : ChevronRight;
---

<button
  type="button"
  on:click={onClick}
  class="h-8 w-8 rounded-full border border-theme-gray flex items-center justify-center cursor-pointer hover:bg-theme-green transition-colors duration-200"
>
  <span class="text-theme-gray"><Icon /></span>
</button>
