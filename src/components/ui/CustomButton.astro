---
import { ArrowUpRight } from "@lucide/astro";

const { text, href, class: className, ...props } = Astro.props;
---

<button
  type="button"
  class={`btn-hover-fill group flex items-center gap-2 px-4 py-2 rounded-full border border-theme-black cursor-pointer shadow transition-shadow duration-300 hover:shadow-[0_0_15px_rgba(176,255,111,0.6)] ${className}`}
  {...props}
>
  <ArrowUpRight class="rotate-arrow" />
  <a
    href={href}
    class="font-semibold text-theme-black group-hover:text-theme-black transition-colors duration-300"
  >
    <slot />
  </a>
</button>

<style>
  .btn-hover-fill {
    position: relative;
    overflow: hidden;
  }

  .btn-hover-fill::before {
    content: "";
    position: absolute;
    inset: 0;
    background-color: var(--color-theme-green);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s ease-in-out;
    z-index: 0;
  }

  .btn-hover-fill:hover::before {
    transform: scaleX(1);
  }

  .btn-hover-fill > * {
    position: relative;
    z-index: 10;
  }

  .rotate-arrow {
    transform: rotate(45deg);
    transition: transform 0.4s ease-in-out;
  }

  .btn-hover-fill:hover .rotate-arrow {
    transform: rotate(0deg);
  }
</style>
